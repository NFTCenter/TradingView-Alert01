{
  "version": 2,
  "builds": [
    {
      "src": "api/webhook.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/test-env",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/api/telegram",
      "dest": "/api/webhook.py"
    }
  ],
  "crons": [
    {
      "path": "/api/webhook",
      "schedule": "0 * * * *"  # Runs every hour
    }
  ]
}
